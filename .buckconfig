[cache]
  mode = dir

[cxx]
  default_platform = iphonesimulator-x86_64
  cflags = -g -std=c11
  cxxflags = -g -std=c++14
  # Many ARC APIs don't compile with separate preprocess and compile.
  combined_preprocess_and_compile = true


[alias]
  bx_trader_app = //:BxTraderApp

[apple]
  xctool_default_destination_specifier = platform=iOS Simulator


[project]
    ignore = .buckd, \
             .hg, \
             .git, \
             .idea, \
             buck-cache, \
             buck-out, \

[apple]
  xctool_zip_target = //third-party/ios/xctool:xctool-minimal-zip

[swift]
  version = 4.0
  compiler_flags = -DBUCK -whole-module-optimization -enable-testing -suppress-warnings

[project]
ide_force_kill = never


